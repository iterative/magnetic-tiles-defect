{
  "name": "magnetic-tiles-defect",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-21.04",
  "features": {
    "ghcr.io/devcontainers/features/nvidia-cuda:1": {
      "installCudnn": true
    }
  },
  "extensions": [
    "Iterative.dvc",
    "ms-python.python",
    "redhat.vscode-yaml"
  ],
  "postCreateCommand": [
    "sudo apt install nvtop;", 
	  "pip3 install --upgrade pip; pip3 install --user -r requirements.txt; python3 -m dvc pull"
]
}